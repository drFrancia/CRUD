<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Topics and Voting</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Topics</h1>
    <form action="/topics" method="POST">
        <input type="text" name="title" placeholder="New topic" required>
        <button type="submit">Add Topic</button>
    </form>

    <ul>
        <% topics.forEach(topic => { %>
            <li>
                <%= topic.title %> - <%= topic.votes %> votes
                <form action="/topics/<%= topic.id %>/votes" method="POST">
                    <button type="submit">Vote</button>
                </form>
                <form action="/topics/<%= topic.id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>                
            </li>
        <% }) %>
    </ul>
    
</body>
</html>
